@model GameCraft.Models.Boardgame
@{
    ViewBag.Title = "Boardgame";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Kategoria: @Model.Genre</li>
    <li>Liczba graczy: @Model.MinPlayerNumber-@Model.MaxPlayerNumber</li>
    <li>Ilość na stanie: @Model.InStock</li>
</ul>


